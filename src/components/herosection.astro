---
import Nav from "./nav.astro";
import Menu from "./menu.astro";
---

<header>
  <div class="navigation">
    <Nav />
  </div>
  <div class="hero">
    <img src="hero2.webp" alt="" />
    <h1>Bliv frivillig</h1>
  </div>
  <Menu />
</header>

<style>
  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background-color: #f8f8f8;
    max-height: 750px;
    overflow: hidden; Skærer alt ud over max-height
  }

  .navigation {
    position: absolute; Håller den alltid högst upp
    left: 0;
    top: 0;
    width: 100%;
    z-index: 10;
  }

  .hero img {
  height: 100%;
  width: 100%;
  object-fit: cover; /* Sørger for at billedet beskæres og ikke bliver forvrænget */
}

  h1 {
    font-size: clamp(40px, 10vw, 170px);
    text-transform: uppercase;
    color: var(--blue);
    font-family: var(--font-primary);
    align-self: center;
    padding: 10px;
  }
</style>
