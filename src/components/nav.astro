---
import Button from "./button.astro";
---

<nav>
  <div>
    <h2>WeShelter</h2>
  </div>

  <!-- Checkbox der styrer menuens visning -->
  <input type="checkbox" id="menu-toggle" class="menu-checkbox" />
  <label for="menu-toggle" class="burger">&#9776;</label>

  <div class="menu">
    <a href="#">Få hjælp</a>
    <a href="#">Bliv frivillig</a>
    <a href="#">Om</a>
    <Button buttontext="Støt" />
  </div>
</nav>

<style>
  /* Grundlæggende styling */
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 20px 5%;
    padding: 10px;
  }

  h2 {
    font-size: 3.5vw;
    font-weight: 600;
    color: white;
    margin: 0;
  }

  a {
    text-decoration: none;
    margin: 20px;
    color: #333;
  }

  a:hover {
    color: #0067ff;
  }

  .menu {
    display: flex;
  }

  .burger {
    display: none;
    font-size: 30px;
    color: #333;
    cursor: pointer;
  }

  /* Skjuler checkbox */
  .menu-checkbox {
    display: none;
  }

  /* Mobilvenlig burger-menu */
  @media (max-width: 1000px) {
    .menu {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 60px;
      background-color: #f8f8f8;
      right: 5%;
      width: 200px;
      text-align: center;
      padding: 20px 0;
      border-radius: 8px;
      z-index: 5;
    }

    .menu a {
      color: #333;
      margin: 10px 0;
    }

    .burger {
      display: block;
    }

    /* Når checkbox er tjekket, vis menuen */
    .menu-checkbox:checked + .burger + .menu {
      display: flex;
    }
  }
</style>
