---
const { image, title, text, link } = Astro.props;
---

<div class="card">
  <div class="card-image">
    <img src={image} alt={title} />
    <h2 class="overlay-text">{title}</h2>
  </div>
  <div class="card-content">
    <p>{text}</p>
    <a href={link} class="read-more">Læs mere</a>
  </div>
</div>

<style>
  .card {
    background-color: white;
    overflow: hidden;
    width: 100%;
    min-width: 200px;
    max-width: 400px;
  }

  .card-image {
    position: relative;
    width: 100%;
    height: auto;
  }

  .card-image img {
    width: 100%;
    display: block;
  }

  .overlay-text {
    position: absolute;
    top: 35%;
    left: 50%;
    transform: translateX(-50%);
    color: white;
    font-weight: 600;
    font-size: 25px;
    text-align: center;
  }

  .card-content {
    padding-top: 20px;
    font-family: "Georgia", serif;
    text-align: left;
  }

  .read-more {
    display: inline-block;
    margin-top: 10px;
    font-weight: bold;
  }

  @media (max-width: 800px) {
    .overlay-text {
      font-size: 16px;
    }

    .card-content {
      font-size: 14px;
    }
  }
</style>

<style>
  .card {
    min-width: 300px; /* Gør hvert kort til en minimumsstørrelse */
    flex-shrink: 0; /* Forhindrer at kortene bliver mindre */
    transition: transform 0.3s ease; /* Gør transformationen lidt smooth */
  }

  .card img {
    width: 100%;
  }

  .card h3 {
    padding: 1rem;
    margin: 0;
  }

  .card p {
    padding: 0 1rem 1rem;
  }

  .card a {
    text-decoration: none;
    color: #007bff;
    font-weight: bold;
    padding: 0 1rem 1rem;
    display: inline-block;
  }
</style>
